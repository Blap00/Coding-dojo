package com.CodingDojo.ListaSimpleEnlazada;

public class SinglyLinkedList {
    public Node head;
    public SinglyLinkedList() {
        this.head = null;
    }
    //Los metodos de la SLL van aqui. Al principio, les mostraremos c√≥mo agregar nodos a la lista.
    public void add(int value) {
        Node newNode = new Node(value);
        if(head == null) {
            head = newNode;
        } else {
            Node runner = head;
            while(runner.next != null) {
                runner = runner.next;
            }
            runner.next = newNode;
        }
    }    
    public void remove() {
        if (head.next == null) {
            head = null;
        } else {
            Node runner = head;
            while (runner.next.next != null) {
                runner = runner.next;
            }
            runner.next = null;
        }
    }
    public void printValues() {
    	if(head != null) {
    		Node runner = head;
    		while(runner.next!=null) {    			
    			System.out.println(runner.value+" ");
    			runner = runner.next;
    		}
    		runner.next= null;
    	}
    }
}
