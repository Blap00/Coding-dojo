package proyectoClass;

public class ProjectTest {
	public static void main(String[] args) {
		// Crear instancias de Project
		Project project1 = new Project();
		project1.setName("Proyecto Inicial");
		project1.setDescription("Primer proyecto del desarrollo software");
		project1.setInitialCost(1000.0);

		Project project2 = new Project("Proyecto WEB APPLICATION");
		project2.setDescription("Proyecto respecto al desarrollo de una aplicacion WEB desde JAVA");
		project2.setInitialCost(2000.0);

		Project project3 = new Project("Proyecto 3");
		project3.setDescription("Proyecto respecto al Desarrollo de un Fullstack JAVA");
		project3.setInitialCost(3000.0);

		// Mostrar el elevator pitch de cada proyecto
		System.out.println(project1.elevatorPitch());
		System.out.println(project2.elevatorPitch());
		System.out.println(project3.elevatorPitch());
	}
}